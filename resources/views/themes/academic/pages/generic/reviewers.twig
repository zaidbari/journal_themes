{% extends "layout.twig" %}
{% block content  %}
    <div class="py-5 bg-dark text-white">
        <div class="container text-center">
            <h1 class="fw-bold">{{ page_title }}</h1>
        </div>
    </div>
    <div class="container my-5">
        {% for reviewer in content %}
            <div>
                {% for img in reviewer.images %}
                        <img loading="lazy" class="rounded shadow" style="height: 100px" src="//epublishing.io/storage/{{ img }}" alt="">
                {% endfor %}

                <h4 class="mt-3">{{ reviewer.title }}</h4>
                <p>{{ reviewer.content|raw }}</p>
                <hr>
            </div>
        {% endfor %}
    </div>
{%  endblock  %}