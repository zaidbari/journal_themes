    {{ article.authors_names }}
    ({{ article.published_at|date('Y') }})
    {{ article.title }}.
    {{ get_var('APP_ABBRV') }},
    {{ article.published_at|date('d') }}
    ({{ article.published_at|date('F Y') }}): 86-91.
