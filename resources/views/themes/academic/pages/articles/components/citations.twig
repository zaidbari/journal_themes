    "{{ article.title }}."
    {{ get_var('JOURNAL_TITLE') }}
    {{ article.published_at|date('d') }} ({{ article.published_at|date('Y') }}), 86-91.
    <a href="https://dx.doi.org/{{ article.doi }}" target="_blank" rel="noreferrer noopener">doi:{{ article.doi }}</a>
</p>
<h4 class="text-dark serif after">MLA (The Modern Language Association) Style</h4>
