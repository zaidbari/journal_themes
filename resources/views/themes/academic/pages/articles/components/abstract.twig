<hr>
<h2 class="serif">{{ article.title|raw }}</h2>
<hr>
<small>
    {% for author in article.authors|cast_to_array %}
        <a class=""
           tabindex="0"
           role="button"
           data-bs-toggle="popover"
           data-bs-placement="bottom"
           data-bs-trigger="focus"
           title="{{ author.title }} {{ author.name }}"
           data-bs-content="{{ author.affiliation }}"
           data-bs-html="true"
        > {{ author.title }} {{ author.name }}{% if loop.last == false %}, {% endif %}</a>
    {% endfor %}
</small>
<hr />
<h4 class="after serif">Abstract</h4>
<div>{{ article.abstract|raw }}</div>

<hr /><p><span class="fw-bold text-dark">Keywords: </span>{{ article.tags }}</p><hr />

<div class="d-flex align-items-center">
    <a rel="license" href="/page/license_information" target="_blank">
        <img loading="lazy" alt="Open access" class="me-2" style="height: 30px" src="//upload.wikimedia.org/wikipedia/commons/2/25/Open_Access_logo_PLoS_white.svg" />
    </a>
    <a rel="license" class="mx-3" href="//creativecommons.org/licenses/by/4.0/" target="_blank">
        <img loading="lazy" alt="Creative Commons License" style="border-width:0" src="//i.creativecommons.org/l/by/4.0/88x31.png" />
    </a>
    <span class="__dimensions_badge_embed__" data-doi="{{ article.doi }}" data-hide-zero-citations="false" data-style="large_rectangle"></span>
</div>

<hr>
<div>{{ html|raw }}</div>
