{% extends "layout.twig" %}
{% block content  %}
    <div class="py-5 bg-light">
        <div class="container text-center">
            <h1 class="mb-3">{{ page_title }}</h1>
        </div>
    </div>
    <div class="container my-5">
            {% if get_var('JOURNAL_ID') == 5 %}
            <h2 class="shadow-lg bg-white p-3" style="border-left: 4px solid #343a40; text-decoration: underline">
                <a href="http://thebiomedicapk.com/" target="_blank" class="w-100 text-muted block mb-5">To see our old archives, please click here to visit our archived website</a>
            </h2>
            {% endif %}
        <div class="accordion accordion-flush" id="accordionFlushExample">
            {% for data in archives %}
                {% for volume in data.volumes|sort((a, b) => b.number <=> a.number)%}
                    <h4>Volume {{ volume.number }} {{ volume.title }}</h4>
                    <ul class="list-unstyled">
                        {% for issue in volume.issue %}
                            <li class="ms-md-4">
                                <h5>
                                    <a href="/{{ data.year }}/{{ volume.number }}/{{ issue.number }}-{{ issue.id }}">Issue {{ issue.number }} | {{ issue.title }}</a>
                                </h5>
                            </li>
                        {% endfor %}
                    </ul>
                {% endfor %}

            {% endfor %}
        </div>
    </div>
{%  endblock  %}