<div class="row">
    <div class="col-md-6">
        <h3 class="mb-3">Authors</h3>
        {% for author in article.authors|cast_to_array %}
            <div class="mb-3">
                <p class="lead fw-bold">{{ author.title }} {{ author.name }}</p>
                <p>{{ author.affiliation }}</p>
                {% if author.orcid_id != null %}
                    <p>
                        <a href='https://orcid.org/{{ author.orcid_id }}' target='_blank'>
                            <img width="20px" src="https://orcid.org/assets/vectors/orcid.logo.icon.svg" class="mr-2" loading="eager" alt="orcid logo" /> ORCID
                        </a>
                    </p>
                {% endif %}
            </div>
        {% endfor %}
    </div>
    <div class="col-md-6">
        <h3 class="mb-3">Publication History</h3>
        <p>
            <span class="fw-bold text-secondary">Received: </span>
            {% if article.timeline.submitted_at %}
                {{ article.timeline.submitted_at|date('F d, Y') }}
            {% else %}
                {{ article.created_at ? article.created_at|date('F d, Y') : '' }}
            {% endif %}
        </p>
        <p>
            {% if article.timeline.revised_at  != null %}
                <span class="fw-bold text-secondary">Revised: </span>
                {{ article.timeline.revised_at|date('F d, Y') }}
            {% endif %}
        </p>
        <p>
            <span class="fw-bold text-secondary">Accepted: </span>
            {% if article.timeline.approved_at != null %}
                {{ article.timeline.approved_at|date('F d, Y') }}
            {% else %}
                {{ article.approved_at ? article.approved_at|date('F d, Y') : '' }}
            {% endif %}
        </p>
        <p>
            <span class="fw-bold text-secondary">Published: </span>
            {% if article.timeline.published_at  != null %}
                {{ article.timeline.published_at|date('F d, Y') }}
            {% else %}
                {{ article.published_at ? article.published_at|date('F d, Y') : '' }}
            {% endif %}
        </p>

    </div>
</div>