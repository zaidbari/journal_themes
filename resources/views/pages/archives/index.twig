{% extends "layout.twig" %}
{% block content  %}
    <div class="py-5 bg-light">
        <div class="container text-center">
            <h1>{{ page_title }}</h1>
        </div>
    </div>
    <div class="container my-5">
        <div class="accordion accordion-flush" id="accordionFlushExample">
            {% for data in archives %}
            <div class="accordion-item">
                <h1 class="accordion-header" id="flush-headingOne">
                    <button class="accordion-button collapsed" style="font-size: 25px" type="button" data-bs-toggle="collapse" data-bs-target="#flush-{{ data.year }}" aria-expanded="false" aria-controls="flush-collapseOne">
                        {{ data.year }}
                    </button>
                </h1>
                <div id="flush-{{ data.year }}" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                    <div class="accordion-body">
                        {% for volume in data.volumes %}
                            <h4>{{ volume.title }}</h4>

                            <ul class="list-unstyled">
                                {% for issue in volume.issue %}
                                    <li class="ms-md-4">
                                        <h5>
                                            <a href="/year-{{ volume.year }}/volume-{{ volume.number }}/issue-{{ issue.number }}-{{ issue.id }}">{{ issue.title }}</a>
                                        </h5>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% endfor %}
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
